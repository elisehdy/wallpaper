<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moreblob"
    tools:context=".SecondActivity">

    <Button
        android:id="@+id/cancelLeave"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:fontFamily="@font/libel"
        android:text="cancel"
        android:textSize="15sp"
        android:visibility="invisible"
        app:backgroundTint="#A642588F"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/leaveGroup"
        tools:strokeColor="#E91E63" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/libel"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:textColor="#000080" />


    <TextView
        android:id="@+id/wallpaperGroupNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/libel"
        android:gravity="right"
        android:textColor="#000080"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/leaveGroup"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:fontFamily="@font/libel"
        android:text="LEAVE GROUP"
        android:textSize="25sp"
        android:visibility="visible"
        app:backgroundTint="#A642588F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewMembersBtn" />

    <Button
        android:id="@+id/confirmLeave"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:backgroundTint="#E91E63"
        android:fontFamily="@font/libel"
        android:text="confirm"
        android:textSize="15sp"
        android:visibility="invisible"
        app:backgroundTint="#DF6E6E"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/leaveGroup" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/libel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leaveGroup"
        app:layout_constraintVertical_bias="0.065" />

    <Button
        android:id="@+id/viewWallpaperBtn"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/libel"
        android:text="View Wallpaper"
        android:textSize="25sp"
        app:backgroundTint="#BC6D93F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wallpaperGroupNumber" />

    <Button
        android:id="@+id/changeWallpaper"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:fontFamily="@font/libel"
        android:text="change Wallpaper"
        android:textSize="25sp"
        app:backgroundTint="#BC5C7BCA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewWallpaperBtn" />

    <Button
        android:id="@+id/viewMembersBtn"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:fontFamily="@font/libel"
        android:text="view members"
        android:textSize="25sp"
        app:backgroundTint="#BC4E68AA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeWallpaper" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="142dp"
        android:layout_height="51dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/libel"
        android:text="Hello there,"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="206dp"
        android:layout_height="53dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/libel"
        android:text="Welcome to Group"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName" />


</androidx.constraintlayout.widget.ConstraintLayout>